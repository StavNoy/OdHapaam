<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimary">

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click the pic to replace"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

    <Button
        android:layout_below="@+id/choose_main"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Save candies"
        android:onClick="saveCandies"/>

    <GridLayout
        android:id="@+id/choose_main"
        android:columnCount="4"
        android:rowCount="4"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerVertical="true"
        android:useDefaultMargins="true">

        <ImageView
            android:id="@+id/image2"
            style="@style/current_images"
            android:layout_row="2"
            android:layout_column="1"
            android:tag="0"
            android:src="@drawable/green_x"/>

        <ImageView
            android:id="@+id/image4"
            style="@style/current_images"
            android:layout_row="2"
            android:layout_column="2"
            android:tag="1"
            android:src="@drawable/red_circle"/>

        <ImageView
            android:id="@+id/image1"
            style="@style/current_images"
            android:layout_row="1"
            android:layout_column="1"
            android:tag="2"
            android:src="@drawable/triangle"/>

        <ImageView
            android:id="@+id/image3"
            style="@style/current_images"
            android:layout_row="1"
            android:layout_column="2"
            android:tag="3"
            android:src="@drawable/yellow_square"/>
    </GridLayout>

</RelativeLayout>



