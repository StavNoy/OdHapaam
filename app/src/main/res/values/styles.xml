<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="current_images">
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_width">145dp</item>
        <item name="android:layout_height">145dp</item>
        <item name="android:onClick">chooseImage</item>
    </style>

    <style name="welcome_buttonBar_Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="loginput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="logbtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">70dp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="highscore_cell">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:strokeColor">#000000</item>
    </style>

    <style name="home_button">
        <item name="android:contentDescription">Home Button</item>
        <item name="android:layout_width">46dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:src">@mipmap/ic_home</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

</resources>
